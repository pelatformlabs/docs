{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Pelatform Labs Documentation",
  "description": "Documentation for Pelatform Labs packages, the collection of tools and resources to help you build modern web applications.",
  "colors": {
    "primary": "#3dbd8d",
    "light": "#87d6b8",
    "dark": "#24b47e"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/logo/light.webp",
    "dark": "/logo/dark.webp"
  },
  "background": {
    "decoration": "windows"
  },
  "icons": {
    "library": "lucide"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:labs@pelatform.com"
      },
      {
        "label": "Home",
        "href": "https://pelatform.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Portal",
      "href": "https://portal.pelatform.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/pelatform",
      "github": "https://github.com/pelatform",
      "facebook": "https://www.facebook.com/profile.php?id=61574864862190"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      {
        "title": "Open in T3 Chat",
        "description": "Ask questions about this page",
        "icon": "https://t3.chat/favicon.ico",
        "href": {
          "base": "https://t3.chat/new",
          "query": [
            {
              "key": "q",
              "value": "Read from https://docs.marblecms.com/$path so I can ask questions about it."
            }
          ]
        }
      },
      "perplexity",
      "mcp"
    ]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "icon": "rocket",
        "pages": [
          "index",
          "quickstart"
        ]
      },
      {
        "group": "Toolkits",
        "icon": "library",
        "pages": [
          "toolkits/index",
          {
            "group": "Config",
            "pages": [
              "toolkits/config/index",
              "toolkits/config/biome",
              "toolkits/config/eslint/index",
              "toolkits/config/eslint/react",
              "toolkits/config/eslint/vite",
